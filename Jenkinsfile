pipeline {
    agent any
    stages {
        stage ("build phase:"){
            steps {
                echo "build completed  successfully: "
                // we write script  block  unser the  steps  block  for writing the  groovy code
                script {
                    def  course = "k8s"
                    if  (course == "k8s") {
                        println("Thanks  for enrolling  into $course")
                    }
                    else
                     println ("Do learn  K8s")
                }
            }
        }
    }
}

